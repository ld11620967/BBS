<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bbs_white"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:layout_gravity="center"
        android:layout_marginBottom="51dp"
        android:layout_marginTop="29dp"
        android:background="@android:color/transparent">

        <com.mob.bbssdk.gui.views.GlideImageView
            android:id="@+id/bbs_editprofile_aivAvatar"
            android:layout_width="94dp"
            android:layout_height="94dp"
            android:layout_gravity="center"
            android:src="@drawable/bbs_setprofile_nopic"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:src="@drawable/bbs_setprofile_camera"
            />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bbs_white"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/bbs_white"
            android:gravity="center">

            <TextView
                android:id="@+id/bbs_editprofile_textViewUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:gravity="center"
                android:hint=""
                android:textColor="@color/bbs_texthint"/>
        </RelativeLayout>

        <include layout="@layout/bbs_divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@color/bbs_white"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/bbs_editprofile_viewMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bbs_editprofile_imageViewMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bbs_setprofile_check"/>

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/bbs_editprofile_male"
                    android:textColor="@color/bbs_textgrey"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bbs_editprofile_viewFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bbs_editprofile_imageViewFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bbs_setprofile_uncheck"/>

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/bbs_editprofile_female"
                    android:textColor="@color/bbs_textgrey"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bbs_editprofile_viewKeepSecret"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bbs_editprofile_imageKeepSecret"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bbs_setprofile_uncheck"/>

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/bbs_editprofile_keepsecret"
                    android:textColor="@color/bbs_textgrey"/>
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/bbs_divider"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <Button
        android:id="@+id/bbs_editprofile_btnSubmit"
        style="@style/BBS_BlueSolidButton"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="20dp"
        android:text="@string/bbs_editprofile_submit"/>

    <TextView
        android:id="@+id/bbs_editprofile_viewLater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="bottom|center_horizontal"
        android:text="@string/bbs_editprofile_setlater"
        android:textColor="@color/bbs_blue"
        android:textSize="14sp"/>
</LinearLayout>
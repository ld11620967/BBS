<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:id="@+id/bbs_subject_viewTitleCenter"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:orientation="horizontal">

        <TextView
            android:id="@+id/bbs_subject_titlecenter_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bbs_subject_titlecenter"
            android:textSize="16sp"
            android:text="灌水区"/>

        <ImageView
            android:id="@+id/bbs_subject_titlecenter_imageViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/bbs_subject_titlecetner_dropdown"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/bbs_maintitlcenterview_imageViewSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="15dp"
        android:src="@drawable/bbs_title_search_black"/>
</FrameLayout>
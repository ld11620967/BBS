<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/bbs_white"
              android:orientation="vertical"
              android:padding="15dp">

    <RelativeLayout
        android:id="@+id/bbs_item_favorite_layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="11dp">

        <com.mob.bbssdk.gui.views.GlideImageView
            android:id="@+id/bbs_item_favorite_aivAvatar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/bbs_item_favorite_textViewAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/bbs_item_favorite_aivAvatar"
            android:textColor="@color/bbs_postitem_username"
            android:textSize="12sp"
            tools:text="管理员"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <com.mob.bbssdk.gui.views.GlideImageView
            android:id="@+id/bbs_item_favorite_aivPic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"/>


        <TextView
            android:id="@+id/bbs_item_favorite_textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="2"
            android:textColor="@color/bbs_postitem_title"
            android:textSize="14sp"
            tools:text="欢迎来到安卓巴士微论坛欢迎来到安卓巴士微论坛"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bbs_item_favorite_textViewSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:lines="1"
            android:textColor="@color/bbs_textgrey"
            android:textSize="11sp"
            tools:text="灌水区"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/bbs_item_favorite_textViewRightTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bbs_textgrey"
            android:textSize="11sp"
            tools:text="51分钟前"
            />
    </LinearLayout>
</LinearLayout>
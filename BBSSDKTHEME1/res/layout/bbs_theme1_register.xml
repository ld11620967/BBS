<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bbs_white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="37dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/bbs_register_edittextusername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="@string/bbs_register_username_hint"
            android:inputType="text"
            android:textColorHint="@color/bbs_theme1_userinputhinttext"
            android:textSize="14sp"/>

        <include layout="@layout/bbs_theme1_divider"/>


        <EditText
            android:id="@+id/bbs_register_edittextmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="@string/bbs_register_email_hint"
            android:inputType="text"
            android:textColorHint="@color/bbs_theme1_userinputhinttext"
            android:textSize="14sp"/>

        <include layout="@layout/bbs_theme1_divider"/>

        <EditText
            android:id="@+id/bbs_register_edittextpassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:digits="@string/bbs_password_digits"
            android:hint="@string/bbs_register_password_hint"
            android:inputType="textPassword"
            android:textColorHint="@color/bbs_theme1_userinputhinttext"
            android:textSize="14sp"/>

        <include layout="@layout/bbs_theme1_divider"/>

        <Button
            android:id="@+id/bbs_register_btnregister"
            style="@style/BBS_theme1_SolidYellowButton"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="27dp"
            android:text="@string/bbs_register_regiseter"
            />
    </LinearLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">
    </View>

    <TextView
        android:id="@+id/bbs_register_btnbacklogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:padding="10dp"
        android:text="@string/bbs_register_backlogin"
        android:textColor="#2a2b30"
        android:textSize="14sp"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bbs_white"
              android:orientation="vertical"
              android:paddingLeft="15dp"
              android:paddingRight="15dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="66dp"
        android:src="@drawable/bbs_theme1_confirm_mail"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="21dp"
        android:lineSpacingMultiplier="1.6"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:gravity="center_horizontal"
        android:text="@string/bbs_retrievepasswordconfirm_desc"
        android:textColor="#acadb8"
        android:textSize="12sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bbs_retrievepasswordconfirm_mail"
            android:textColor="@color/bbs_theme1_pagetext"
            android:textSize="14sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/bbs_retrievepasswordconfirm_textViewMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:text="test@mob.com"
            android:textColor="#2a2b30"
            android:textSize="16sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/bbs_pageretrievepasswordconfirm_btnBackToLogin"
        style="@style/BBS_theme1_SolidYellowButton"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="38dp"
        android:text="@string/bbs_retrievepasswordconfirm_backlogin"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/bbs_retrievepasswordconfirm_nomail"
            android:textColor="#4e4f57"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/bbs_pageretrievepasswordconfirm_textViewResend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/bbs_retrievepasswordconfirm_resend"
            android:textColor="#7a94fa"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>
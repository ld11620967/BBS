<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@color/bbs_white"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

    <com.mob.bbssdk.gui.views.GlideImageView
        android:id="@+id/aivAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/aivAvatar"
        android:text="刘德华"
        android:textColor="#2d3037"
        android:textSize="14sp"
        />

    <ImageView
        android:id="@+id/imageViewFollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/bbs_theme1_follow"
        />

    <ImageView
        android:id="@+id/imageViewUnfollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/bbs_theme1_unfollow"
        />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bbs_theme1_user_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bbs_white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="15dp">

            <com.mob.bbssdk.gui.views.GlideImageView
                android:id="@+id/aivAvatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="left"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bbs_theme1_userprofile_arrow"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="5dp"
            android:background="@color/bbs_white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="用户名"
                android:textColor="#4e4f57"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/textViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#acadb8"
                android:textSize="15sp"
                tools:text="刘先生"/>
        </RelativeLayout>

        <include layout="@layout/bbs_divider"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@color/bbs_white"
            android:paddingLeft="15dp"
            android:paddingRight="7dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/bbs_userprofile_gender"
                android:textColor="#4e4f57"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/textViewGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imageViewGenderArrow"
                android:textColor="#acadb8"
                android:textSize="15sp"
                tools:text="男"/>

            <ImageView
                android:id="@+id/imageViewGenderArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/bbs_theme1_userprofile_arrow"
                />
        </RelativeLayout>

        <include layout="@layout/bbs_divider"/>

        <RelativeLayout
            android:id="@+id/layoutSignature"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@color/bbs_white"
            android:paddingLeft="15dp"
            android:paddingRight="7dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="个性签名"
                android:textColor="#4e4f57"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/textViewSignature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imageViewSignatureArrow"
                android:textColor="#acadb8"
                android:textSize="15sp"
                tools:text="来自电影不夜城"/>

            <ImageView
                android:id="@+id/imageViewSignatureArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/bbs_theme1_userprofile_arrow"
                />
        </RelativeLayout>

        <include layout="@layout/bbs_divider"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@color/bbs_white"
            android:paddingLeft="15dp"
            android:paddingRight="7dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="地区"
                android:textColor="#4e4f57"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/textViewDistrict"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imageViewDistrictArrow"
                android:textColor="#acadb8"
                android:textSize="15sp"
                tools:text="上海市 黄浦区"/>

            <ImageView
                android:id="@+id/imageViewDistrictArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/bbs_theme1_userprofile_arrow"
                />
        </RelativeLayout>

        <include layout="@layout/bbs_divider"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@color/bbs_white"
            android:paddingLeft="15dp"
            android:paddingRight="7dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="生日"
                android:textColor="#4e4f57"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/textViewBirthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imageViewBirthdayArrow"
                android:textColor="#acadb8"
                android:textSize="15sp"
                tools:text="1987-06-20"/>

            <ImageView
                android:id="@+id/imageViewBirthdayArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/bbs_theme1_userprofile_arrow"
                />
        </RelativeLayout>

        <include layout="@layout/bbs_divider"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@color/bbs_white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/bbs_userprofile_mail"
                android:textColor="#4e4f57"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/textViewMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#acadb8"
                android:textSize="15sp"
                tools:text="issayliu@qq.com"/>
        </RelativeLayout>

        <include layout="@layout/bbs_divider"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@color/bbs_white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/bbs_userprofile_usergroup"
                android:textColor="#4e4f57"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/textViewGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#acadb8"
                android:textSize="15sp"
                tools:text="管理员"/>
        </RelativeLayout>

        <include layout="@layout/bbs_divider"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@color/bbs_white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/bbs_userprofile_status"
                android:textColor="#4e4f57"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/textViewStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/bbs_userprofile_status_inactive"
                android:textColor="#ff6b71"
                android:textSize="15sp"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
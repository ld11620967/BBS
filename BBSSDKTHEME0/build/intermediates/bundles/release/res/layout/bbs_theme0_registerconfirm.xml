<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/bbs_white"
              android:paddingLeft="15dp"
              android:paddingRight="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="27dp"
        android:lineSpacingMultiplier="1.6"
        android:text="@string/bbs_reactiveconfirm_des"
        android:textColor="@color/bbs_theme0_pagetext"
        android:textSize="16sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bbs_registerconfirm_email"
            android:textColor="@color/bbs_theme0_pagetext"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/bbs_registerconfirm_textViewMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textColor="#545454"
            android:textSize="18sp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/bbs_registerconfirm_nomail"
            android:textColor="@color/bbs_theme0_pagetext"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/bbs_registerconfirm_textViewResend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/bbs_registerconfirm_resend"
            android:textColor="@color/bbs_theme0_blue"
            android:textSize="14sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/bbs_registerconfirm_btnFinish"
        style="@style/BBS_theme0_SolidBlueButton"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="35dp"
        android:text="@string/bbs_registerconfirm_finish"
        />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@color/bbs_white"
              android:orientation="vertical"
              android:paddingLeft="15dp"
              android:paddingRight="15dp"
              android:paddingTop="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <com.mob.bbssdk.gui.views.GlideImageView
            android:id="@+id/aivImage"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" a;lkjf;akdjsf;klja;sdkgopqihepiohnqwpierj"
            android:textSize="16sp"
            android:textColor="@color/bbs_postitem_title"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="35dp">


        <TextView
            android:id="@+id/textViewSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/bbs_theme0_bg_postitemsubject"
            android:lines="1"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textColor="@color/bbs_white"
            android:textSize="10sp"
            tools:text="灌水区"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bbs_theme0_postitem_reply"
                />

            <TextView
                android:id="@+id/textViewPageComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#abafba"
                android:textSize="10sp"
                tools:text="30"
                />

            <View
                android:layout_width="10dp"
                android:layout_height="0dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bbs_theme0_postitem_view"
                />

            <TextView
                android:id="@+id/textViewPageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#abafba"
                android:textSize="10sp"
                tools:text="30"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>